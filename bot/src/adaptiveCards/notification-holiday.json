{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "TextBlock",
            "size": "Medium",
            "weight": "Bolder",
            "text": "${holidayName}"
        },
        {
            "type": "Image",
            "msTeams": {
                "allowExpand": true
            },
            "url": "${holidayImageUrl}",
            "horizontalAlignment": "Center"
        },
        {
            "type": "FactSet",
            "facts": [
                {
                    "title": "Date:",
                    "value": "${holidayDate}"
                },
                {
                    "title": "Country(s):",
                    "value": "${holidayCountry}"
                }
            ]
        },
        {
            "type": "RichTextBlock",
            "inlines": [
                {
                    "type": "TextRun",
                    "text": "${holidayDescription}"
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.4"
  }